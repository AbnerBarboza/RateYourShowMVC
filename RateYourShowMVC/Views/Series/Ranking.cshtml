@{
    ViewBag.Title = "Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="header-spacer"></div>

<div class="container">
    <div class="row">
        <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="ui-block">
                <div class="top-header">
                    <div class="top-header-thumb">
                        <img src="~/img/top-header1.jpg" alt="nature">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="ui-block">
                <div class="ui-block-title">
                    <div class="h6 title">Ranking das séries em alta</div>
                    <a href="#" class="more"><svg class="olymp-three-dots-icon"><use xlink:href="svg-icons/sprites/icons.svg#olymp-three-dots-icon"></use></svg></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="ui-block">
                <table class="event-item-table">
                    <tbody>
                        @foreach (var rank in ViewBag.Ranking.ToList())
                        {
                            <tr class="event-item">
                                <td class="upcoming">
                                    <div class="date-event">
                                        <span class="day">1</span>
                                        <span style="text-transform:uppercase;">Posição</span>
                                    </div>
                                </td>
                                <td class="author">
                                    <div class="event-author inline-items">
                                        <div class="author-thumb">
                                            <img src="~/img/avatar66-sm.jpg" alt="author">
                                        </div>
                                        <div class="author-date">
                                            <a href="#" class="author-name h6">@rank.Nome</a>
                                        </div>
                                    </div>
                                </td>

                                <td class="add-event">
                                    <a href="20-CalendarAndEvents-MonthlyCalendar.html" class="btn btn-breez btn-sm">Seguir Série</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="ui-block-title ui-block-title-small">
                    <h6 class="title">Ranking</h6>
                </div>
            </div>
        </div>
    </div>
</div>

