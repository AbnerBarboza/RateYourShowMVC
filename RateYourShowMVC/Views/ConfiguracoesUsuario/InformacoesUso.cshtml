        <div class="ui-block-title">
            <h6 class="title">Informações de uso</h6>
        </div>
        <div class="ui-block-content">


            <!-- Personal Account Settings Form -->

            @using (Html.BeginForm("InformacoesUso", "ConfiguracoesUsuario", FormMethod.Post, htmlAttributes: new { }))
            {
                <div class="row">
                    <!--
                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
