@model IEnumerable<RateYourShowMVC.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Administrador.cshtml";
    Boolean foto;
    RateYourShowMVC.Models.Usuario usuario = ViewBag.Usuario;
}

<div class="header-spacer"></div>

<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="container">
        <div class="row">
            <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="ui-block responsive-flex">
                    <div class="ui-block-title">
                        <div class="h6 title">Galeria de usuários</div>

                        @using (Html.BeginForm("Usuarios", "Administrador", FormMethod.Post, htmlAttributes: new { @class = "w-search" }))
                        {

                            <div class="form-group with-button is-empty">
                                <input class="form-control" id="procurar" name="procurar" placeholder="procure usuários..." type="text" />
                                <button type="submit">
                                    <svg class="olymp-magnifying-glass-icon"><use xlink:href="~/svg-icons/sprites/icons.svg#olymp-magnifying-glass-icon"></use></svg>
                                </button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        @foreach (var item in Model.OrderBy(n => n.Nome))
        {
            foto = false;
            <div class="photo-item col-4-width">
                @foreach (var mid in item.Midia.Where(m => m.TipoMidiaId == 5))
                {
                    <img src="~/Uploads/@mid.Link" style="height:200px;width:300px" stalt="photo">

                    foto = true;
                }
                @if (!foto)
                {
                    <img src="~/Uploads/default.jpg" style="height:200px;width:300px" stalt="photo">

                }
                <div class="overlay overlay-dark"></div>
                <a href="#" data-toggle="modal" data-target="#open-photo-popup-v2" class="full-block"></a>
                <div class="content">
                    @Html.ActionLink(item.Nome, "EditarUsuario", new { id = item.UsuarioId }, htmlAttributes: new { @class = "h4" })
                </div>
            </div>
        }
    </div>

</div>

