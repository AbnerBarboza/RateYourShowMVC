
@{
    ViewBag.Title = "Personalidades";
    Layout = "~/Views/Shared/_Administrador.cshtml";
}

<div class="header-spacer"></div>

<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="container">
        <div class="row">
            <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="ui-block responsive-flex">
                    <div class="ui-block-title">
                        <div class="h6 title">Galeria de Personalidades</div>

                        @using (Html.BeginForm("DashSeries", "Series", FormMethod.Post, htmlAttributes: new { @class = "w-search" }))
                        {

                            <div class="form-group with-button is-empty">
                                <input class="form-control" id="procurar" name="procurar" placeholder="procure séries..." type="text" />
                                <button type="submit">
                                    <svg class="olymp-magnifying-glass-icon"><use xlink:href="~/svg-icons/sprites/icons.svg#olymp-magnifying-glass-icon"></use></svg>
                                </button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container">

        <div class="photo-item col-4-width">
            <img src="~/img/photo-item2.jpg" alt="photo">
            <div class="overlay overlay-dark"></div>
            <a href="~/Administrador/EditarPersonalidade" class="more"><svg class="olymp-three-dots-icon"><use xlink:href="~/svg-icons/sprites/icons.svg#olymp-three-dots-icon"></use></svg></a>
            <a href="#" data-toggle="modal" data-target="#open-photo-popup-v2" class="  full-block"></a>
            <div class="content">
                <a href="~/Administrador/EditarPersonalidade" class="h6 title">Nome</a>
            </div>
        </div>
    </div>    
</div>

