@model RateYourShowMVC.Models.Series

@{
    ViewBag.Title = "Adicionar Episódio";
    Layout = "~/Views/Shared/_Administrador.cshtml";
}

<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="ui-block">
        <div class="ui-block-title">
            <h6 class="title">Adicionar episódios em @Model.Nome</h6>
        </div>
        <div class="ui-block-content">


            <!-- Personal Information Form  -->

            @using (Html.BeginForm("AdicionarEpisodio", "Administrador", FormMethod.Post, htmlAttributes: new { }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row ">
                    <input value="@Model.SeriesId" id="SeriesId" name="SeriesId" hidden/>
                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">Temporada</label>
                            <input class="form-control"  name="Temporada" id="Temporada" type="number" />
                        </div>


                    </div>
                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">Episódio</label>
                            <input class="form-control" name="Numero" id="Numero" type="number" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">Titulo</label>
                            <input class="form-control" placeholder="" name="Titulo" id="Titulo" type="text" />
                        </div>
                    </div>
                </div>
                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                    <button class="btn btn-primary btn-lg full-width" style="margin-left: 28em;" type="submit">Adicionar</button>
                </div>
            }
        </div>
    </div>

</div>