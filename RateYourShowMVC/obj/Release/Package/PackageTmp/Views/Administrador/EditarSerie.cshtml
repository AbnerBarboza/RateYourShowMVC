@model RateYourShowMVC.Models.Series

@{
    ViewBag.Title = Model.Nome;
    Layout = "~/Views/Shared/_Administrador.cshtml";
}

<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="ui-block">
        <div class="ui-block-title">
            <h6 class="title">Editar de Série</h6>
        </div>
        <div class="ui-block-content">


            <!-- Personal Information Form  -->


            <div class="row ">

                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">

                    @Html.ActionLink("Alterar dados", "AlterarDados", new { id = Model.SeriesId }, htmlAttributes: new { style = "color:black;", @class = "btn btn-smoke btn-lg full-width" })

                    @Html.ActionLink("Adicionar personagem", "AdicionarPersonagem", new { id = Model.SeriesId }, htmlAttributes: new { style = "color:black;", @class = "btn btn-smoke btn-lg full-width" })
                    
                    @Html.ActionLink("Adicionar episódios", "AdicionarEpisodio", new { id = Model.SeriesId }, htmlAttributes: new { style = "color:black;", @class = "btn btn-smoke btn-lg full-width" })

                </div>
                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                    @Html.ActionLink("Modificar gêneros", "AlterarDados", new { id = Model.SeriesId }, htmlAttributes: new { style = "color:black;", @class = "btn btn-smoke btn-lg full-width" })

                    @Html.ActionLink("Remover personagem", "RemoverPersonagem", new { id = Model.SeriesId }, htmlAttributes: new { style = "color:black;", @class = "btn btn-smoke btn-lg full-width" })
                </div>
            </div>

        </div>
    </div>
</div>
