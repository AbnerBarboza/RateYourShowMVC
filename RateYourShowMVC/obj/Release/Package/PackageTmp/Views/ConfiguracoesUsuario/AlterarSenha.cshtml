
@{
    ViewBag.Title = "Alterar Senha";
    Layout = "~/Views/Shared/_ConfiguracaoUsu.cshtml";
}


<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="ui-block">
        <div class="ui-block-title">
            <h6 class="title">Alterar Senha</h6>
        </div>
        <div class="ui-block-content">


            <!-- Change Password Form -->

            @using (Html.BeginForm("AlterarSenha", "ConfiguracoesUsuario", FormMethod.Post, htmlAttributes: new { }))
            {<div class="row">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">Confirme a senha atual</label>
                            <input class="form-control" placeholder="" type="password" value="" name="SenhaAtual" id="SenhaAtual">
                        </div>
                    </div>

                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Nova Senha</label>
                            <input class="form-control" placeholder="" type="password" name="SenhaNova" id="SenhaNova">
                        </div>
                    </div>
                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Confirme Nova Senha</label>
                            <input class="form-control" placeholder="" type="password" name="ConfirmarSenha" id="ConfirmarSenha">
                        </div>
                    </div>


                    <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <button class="btn btn-primary btn-lg full-width">Alterar Senha</button>
                    </div>

                </div>
            }
            <!-- ... end Change Password Form -->
        </div>
    </div>
</div>



<!-- ... end Your Account Personal Information -->
