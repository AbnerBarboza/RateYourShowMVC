
@{
    ViewBag.Title = "Reportar Erro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header-spacer"></div>
<div class="container">
    <div class="row">
        <div class="col col-lg-12 col-md-12 col-sm-12 col-12">
            <h2 class="presentation-margin">Reportar Erro</h2>

            <div class="ui-block">
                @using (Html.BeginForm("ReportarErro", "Home", FormMethod.Post, htmlAttributes: new { @class = "" }))
                {
                <div class="ui-block-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col col-xl-7 col-lg-7 col-md-7 col-sm-12 col-12">
                            <h5>Informe-nos sobre um recurso com falha, informações incorretas ou omitidas </h5>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <label class="control-label">Descreva seu erro</label>
                            <input class="form-control" placeholder="Descreva seu erro" id="erro" name="erro" type="text" required />
                        </div>
                    </div>
                    <button class="btn btn-primary btn-md-2" type="submit">Enviar</button>
                </div>
                }
            </div>
        </div>
    </div>
</div>


